<atlassian-plugin key="com.atlassian.labs.confluence.markdown" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <macro key="atlassian.markdown.macro" name="markdown"
           class="com.atlassian.labs.markdown.confluence.ConfluenceMarkdownMacro">

        <description>This macro allows Markdown inside Confluence</description>

        <!-- Provides help text for the Confluence notation guide. -->
        <resource type="velocity" name="help" location="templates/markdown-macro-help.vm">
            <param name="help-section" value="confluence"/>
        </resource>

        <!-- Specifies which macro browser category this macro should display in. -->
        <category name="confluence-content"/>

        <parameters>
            <parameter name="nopanel" type="boolean" default="false"/>
        </parameters>
    </macro>

    <xhtml-macro key="atlassian.markdown.macro.xhtml" name="markdown" documentation-url="help.markdown.macro"
           class="com.atlassian.labs.markdown.confluence.ConfluenceMarkdownXhtmlMacro">

        <description>This macro allows Markdown inside Confluence</description>

        <!-- Provides help text for the Confluence notation guide. -->
        <resource type="velocity" name="help" location="templates/markdown-macro-help.vm">
            <param name="help-section" value="confluence"/>
        </resource>

        <!-- Specifies which macro browser category this macro should display in. -->
        <category name="confluence-content"/>

        <parameters>
            <parameter name="nopanel" type="boolean" default="false"/>
        </parameters>
    </xhtml-macro>



    <resource type="i18n" name="i18n" location="com.atlassian.labs.confluence.markdown.confluence-markdown-i18m" />

    <resource type="download" name="images/" location="images"/>

    <resource key="icons" name="icons/" type="download" location="/icons"/>


</atlassian-plugin>
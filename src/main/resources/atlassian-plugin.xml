<atlassian-plugin key="com.atlassian.labs.jira.markdown" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <macro key="markdown" i18n-name-key="markdown.renderer.macro"
           class="com.atlassian.labs.markdown.MarkdownMacro">
        <description>A wiki macro that can render markdown content</description>
    </macro>

    <jira-renderer key="atlassian-jira-markdown-renderer"
                   name="Markdown Renderer"
                   i18n-name-key="markdown.renderer"
                   class="com.atlassian.labs.markdown.MarkdownRenderer">
        <description>A field renderer that will render markdown content</description>
        <resource type="velocity" name="edit" location="templates/markdown-edit.vm"/>
        <resource type="velocity" name="javascript" location="js/markdown-edit.js"/>
        <resource type="velocity" name="css" location="css/markdown-edit.css"/>
    </jira-renderer>

    <web-resource key="jira-markdown-plugin-pagedown" name="Page Down Edit JS/CSS">
        <resource type="download" name="pagedown.css" location="css/pagedown/pagedown.css"/>
        <resource type="download" name="Markdown.Converter.js" location="js/pagedown/Markdown.Converter.js"/>
        <resource type="download" name="Markdown.Editor.js" location="js/pagedown/Markdown.Editor.js"/>
        <resource type="download" name="Markdown.Sanitizer.js" location="js/pagedown/Markdown.Sanitizer.js"/>
    </web-resource>

    <web-resource key="jira-markdown-plugin-edit" name="Atlassian JIRA Markdown Edit JS/CSS">
        <!-- needs to be global because quick create is global-->
        <context>jira.general</context>

        <!--<dependency>com.atlassian.labs.jira.markdown:jira-markdown-plugin-pagedown</dependency>-->

        <resource type="download" name="markdown-edit.css" location="css/markdown-edit-hashify.css"/>
        <resource type="download" name="markdown-edit.js" location="js/markdown-edit-hashify.js"/>
    </web-resource>

    <web-resource key="jira-markdown-plugin-view" name="Atlassian JIRA Markdown View JS/CSS">
        <context>jira.view.issue</context>

        <resource type="download" name="markdown-view.css" location="css/markdown-view.css"/>
    </web-resource>

    <resource type="i18n" name="markdown-i18n" location="i18n/markdown-i18n"/>

</atlassian-plugin>